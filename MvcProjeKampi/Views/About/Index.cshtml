@using EntityLayer.Concrate
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakımmda Başlığı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1.Substring(0,10)</td>
            <td><a href="#"class="btn btn-primary">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-warning">Pasif Yap</a></td>

        </tr>

    }

</table>

@Html.Action("AboutPartial","About")