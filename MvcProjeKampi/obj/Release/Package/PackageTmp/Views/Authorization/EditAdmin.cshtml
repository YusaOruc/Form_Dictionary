@model EntityLayer.Concrate.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Admin Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })

    @Html.Label("Admin Adı")
    @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control" })

    <br />
    @Html.Label("Şifreyi giriniz")
    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })

    <br />

    @Html.Label("Rolü Seçiniz")

    @Html.DropDownList("AdminRole",
                 new List<SelectListItem> {
                     new SelectListItem {
                        Text="A",
                        Value="A",
                        // Selected = true, seçili olarak gelsin
                        // Disabled = true  disable olarak gelsin istersek kullanıyoruz
                     },
                     new SelectListItem {
                        Text="B",
                        Value="B",
                     },
                 } ,new { @class = "form-control" })


    <br />
    <button class="btn btn-primary">Kaydet</button>


</div>
}

