@using EntityLayer.Concrate
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kategoriler Sayfası</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<br />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı Mail</th>
            <th>Yetki</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
            
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr>
        <th>@item.AdminID</th>
        <td>@item.AdminName</td>
        <td>@item.AdminRole</td>
        <td>Aktif</td>

        <td><a href="/Authorization/AddAdmin/@item.AdminID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Güncelle</a></td>
        



    </tr>
    }

</table>

<a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Ekle</a>

